<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :minimum_price %>
<%= f.number_field :minimum_price, in: 1..10_000, step: 1 %>

<%= f.label :shipping_fee %>
<%= f.number_field :shipping_fee, in: 0..10_000, step: 1 %>

<%= f.label :quantity %>
<%= f.number_field :quantity, in: 0..10_000, step: 1 %>

<%= f.label :payment_email %>
<%= f.text_field :payment_email %>

<%= f.simple_fields_for :images, @item.images.build do |image_fields| %>
  <%= image_fields.input :attachment, as: :file, label: 'Image' %>
<% end %>

<%= f.check_box :disclaimer %>
I agree to ship this item in a timely manner to whoever purchases it.
