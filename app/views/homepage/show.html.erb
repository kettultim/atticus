<%# Featured products %>
<div class="featured-products">
  <div class="product-grid">
  <%#Individual product %>
    <div class="product">
      <div class="product-img">
        <img src="images/product-img.png" />
      </div>
      <div class="overlay">
        <div class="tinytext">
          100% proceeds support
        </div>
