<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :zip_code %>
<%= f.text_field :zip_code %>

<%= f.label :details %>
<%= f.text_area :details %>

<%= f.check_box :allow_product_donations %> Allow product donations

<%= f.label :logo %>
<%= f.input :logo, as: :file, label: false %>

<%= f.label :banner %>
<%= f.input :banner, as: :file, label: false %>

<%= f.label :duration %>
<%= f.select(:duration, options_for_select(
  ['30 days', 30], ['60 days', 60])) %>

<%= f.label :funding_goal %>
<%= f.number_field :funding_goal, in: 1..1_000_000, step: 1 %>
